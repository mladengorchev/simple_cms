<% @page_title = "All Sections" %>

<h2>Sections</h2>

<%= link_to("Add new section", {:action => 'new'}, :class => 'action new') %>

<table class="listings">
  <tr>
    <th></th>
    <th width="200">Sections</th>
    <th width="30">Page ID</th>
    <th width="400">Content</th>
    <th width="20">Visible</th>
    <th width="350">Actions</th>
  </tr>
  <% @sections.each do |section| %>
  <tr>
    <td><%= section.position %></td>
    <td><%= section.name %></td>
    <td><%= section.page_id %></td>
    <td><%= truncate(section.content, length: 137) %></td>
    <td><%= section.visible ? 'Yes' : 'No' %></td>
    <td class="actions">
      <%= link_to(raw('<i class="fa fa-eye"></i> Show'), {:action => 'show', :id => section.id}, :class => 'action show') %>
      <%= link_to(raw('<i class="fa fa-pencil"></i> Edit'), {:action => 'edit', :id => section.id}, :class => 'action edit') %>
      <%= link_to(raw('<i class="fa fa-trash-o"></i> Delete'), {:action => 'delete', :id => section.id}, :class => 'action delete') %>
    </td>
  </tr>
  <% end %>
</table>
